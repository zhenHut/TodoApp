<UserControl x:Class="TodoApp.View.TaskView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TodoApp.View"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Background="{StaticResource PageBackgroundGradient}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
    </UserControl.Resources>

    <Grid Margin="10 5">

        <Grid.RowDefinitions>
            <RowDefinition  Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Header -->
            <TextBlock Grid.Column="0"
                       Text="📜 Meine Aufgaben"
                       VerticalAlignment="Center"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="YellowGreen"
                       Margin="0 0 0 10" />
            <!-- #endregion -->

            <!-- MenuBar -->
            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        Margin="0">

                <!-- Load Button -->
                <Button Width="Auto"
                        Height="Auto"
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding LoadTaskCommand}"
                        ToolTip="Aufgaben Laden.">

                    <StackPanel Orientation="Vertical">
                        <Image Source="/Assets/Icon/Icon-reload.png"
                               Width="40"
                               Height="40" />
                        <TextBlock Text="Laden"
                                   Foreground="YellowGreen" />
                    </StackPanel>
                </Button>

                <Border Width="1"
                        Height="40"
                        Background="{StaticResource SeparatorBrush}"
                        Margin="15 0"
                        VerticalAlignment="Center" />



                <!-- Save Button -->
                <Button Width="Auto"
                        Height="Auto"
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding SaveTaskCommand}"
                        ToolTip="Aufgaben speichern.">

                    <StackPanel Orientation="Vertical">
                        <Image Source="/Assets/Icon/Icon-save.png"
                               Width="40"
                               Height="40" />
                        <TextBlock Text="Speichern"
                                   Foreground="YellowGreen" />
                    </StackPanel>
                </Button>

                <!-- Seperator -->
                <Border Width="1"
                        Height="40"
                        Margin="15 0"
                        VerticalAlignment="Center">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0"
                                             EndPoint="0,1">
                            <GradientStop Color="#66FFFFFF"
                                          Offset="0.0" />
                            <GradientStop Color="#22FFFFFF"
                                          Offset="0.5" />
                            <GradientStop Color="#66FFFFFF"
                                          Offset="1.0" />
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>

                <!-- AddTask Button -->
                <Button Width="Auto"
                        Height="Auto"
                        HorizontalAlignment="Right"
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding OpenAddTaskCommand}"
                        ToolTip="öffnet Dialog um Aufgabe hinzu zufügen.">

                    <StackPanel Orientation="Vertical">

                        <Image Source="/Assets/Icon/Icon-addTask.png"
                               Width="40"
                               Height="40" />

                        <TextBlock Text="Hinzufügen"
                                   Foreground="YellowGreen" />
                    </StackPanel>

                </Button>

            </StackPanel>
        </Grid>

        <!-- Content -->
        <Grid Grid.Row="1"
              HorizontalAlignment="Stretch"
              Width="Auto"
              Margin="0 10 0 0">

            <ListBox ItemsSource="{Binding Tasks}"
                     Background="Transparent"
                     HorizontalContentAlignment="Stretch">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto"
                                                  MinWidth="50" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!-- Icon / Checkbox -->

                            <CheckBox Grid.Column="0"
                                      Width="32"
                                      Height="32"
                                      IsChecked="{Binding IsCompleted}"
                                      Margin="0 0 10 0"
                                      ToolTip="Markiere als erledigt">
                                <CheckBox.Template>
                                    <ControlTemplate TargetType="CheckBox">
                                        <Grid>
                                            <Image x:Name="CheckIcon"
                                                   Source="/Assets/Icon/Icongeprüft.png"
                                                   Width="32"
                                                   Height="32" />
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked"
                                                     Value="True">
                                                <Setter TargetName="CheckIcon"
                                                        Property="Source"
                                                        Value="/Assets/Icon/IconGeprüft-aktiviert.png" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </CheckBox.Template>

                            </CheckBox>

                            <!-- Titel der Aufgabe -->

                            <TextBlock Grid.Column="2"
                                       Text="{Binding Title}"
                                       Margin="15 0 0 0"
                                       Foreground="LightGoldenrodYellow"
                                       FontSize="20">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsCompleted}"
                                                         Value="True">
                                                <Setter Property="TextDecorations">
                                                    <Setter.Value>
                                                        <TextDecorationCollection>

                                                            <TextDecoration Location="Strikethrough"
                                                                            PenOffset="0">
                                                                <TextDecoration.Pen>
                                                                    <Pen Brush="IndianRed"
                                                                         Thickness="2" />
                                                                </TextDecoration.Pen>
                                                            </TextDecoration>
                                                        </TextDecorationCollection>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                                <TextBlock.ToolTip>
                                    <ToolTip Content="{Binding Description}" />
                                </TextBlock.ToolTip>
                            </TextBlock>

                            <!-- Statusanzeige: Erledigt -->

                            <TextBlock Text="Erledigt"
                                       Foreground="Lightgreen"
                                       Visibility="{Binding IsCompleted, Converter={StaticResource BoolToVisibility}}"
                                       Margin="0 0 5 0"
                                       Grid.Column="1"
                                       HorizontalAlignment="Left" />

                            <!-- Delete Button -->

                            <Button Grid.Column="3"
                                    Width="32"
                                    Height="32"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Command="{Binding DataContext.DeleteTaskCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                    CommandParameter="{Binding}">

                                <Image x:Name="CheckIcon"
                                       Source="/Assets/Icon/IconMüll.png"
                                       Width="32"
                                       Height="32" />

                            </Button>

                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

    </Grid>
</UserControl>
