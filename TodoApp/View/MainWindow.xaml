                                            </Border>

                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected"
                                                         Value="True">
                                                    <Setter TargetName="Bd"
                                                            Property="Background"
                                                            Value="#5525A461" />
                                                  
